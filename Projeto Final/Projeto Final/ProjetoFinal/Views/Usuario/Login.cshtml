@model UsuarioModel
<h2> Login</h2>


<div class="container">
    <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            @{
                try
                {
                    if (TempData["MENSAGEMloginInvalido"].ToString() != "")
                    { <div class="alert alert-danger">
                            <strong>Alerta!</strong>@TempData["MENSAGEMloginInvalido"]
                        </div> }
                }
                catch { }
            }
            <form asp-controller="Usuario" asp-action="Autenticar">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" name="email" asp-for="Email">
                </div>
                <div class="form-group">
                    <label for="pwd">Senha:</label>
                    <input type="password" class="form-control" name="pwd" asp-for="Senha">
                </div>
                <div class="checkbox">
                    <label><input type="checkbox"> Lembrar</label>
                </div>
                <button type="submit" class="btn btn-info">Entrar</button>
            </form>
        </div>
        <div class="col-lg-4"></div>
    </div>
</div>