@model UsuarioModel
@{
    Layout = "../Shared/_LayoutCadastro.cshtml";
}


<center>
    <h2>
        Cadastro
    </h2>
</center>


<form asp-controller="Usuario" asp-action="Registrar" class="form-horizontal" style="margin-left:15%">
    <div class="form-group">
        <label class="control-label col-sm-2" for="nome">Nome:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="Nome" id="nome" placeholder="Informe nome completo">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="cpf">CPF:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control"asp-for="Cpf" id="nome" placeholder="Informe CPF">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="email">Email:</label>
        <div class="col-sm-6">
            <input type="email" class="form-control"asp-for="Email" id="email" placeholder="Informe email">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="pwd">Senha:</label>
        <div class="col-sm-6">
            <input type="password" class="form-control"asp-for="Senha" id="pwd" placeholder="Informe senha">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2"asp-for="Data_Nascimento" for="nome">Data de nascimento:</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" id="nome" placeholder="Informe data de nascimento">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2"asp-for="Altura" for="altura">Altura:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" id="nome" placeholder="Informe altura">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2"asp-for="Peso" for="peso">Peso:</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" id="nome" placeholder="Informe peso">
        </div>
    </div>
    <div class="row form-group" style="margin-left:7%;">
        <div class="col-sm-4 ">
            <label class="control-label col-sm-2" asp-for="Sexo"for="sexo">Sexo:</label>
            <div class="col-sm-offset-2 col-sm-4">
                <div class="radio">
                    <label><input type="radio" name="sexo" value="F"> Feminino</label>
                        <label><input type="radio" name="sexo" value="M">Masculino</label>
                </div>
            </div>
            </div>
        <div class="col-sm-4">
            <label class="control-label col-sm-2" asp-for="Condicao" for="diabetico">Condi&ccedil;&atilde;o:</label>
            <div class="col-sm-offset-2 col-sm-4">
                <div class="checkbox">
                    <label><input type="radio" name="condicao" value="D">Diab&eacute;tico</label>
                    <label><input type="radio" name="condicao" value="H">Hipertenso</label>
                    <label><input type="radio" name="condicao" value="P">Diab&eacute;tico e Hipertenso</label>
                </div>
            </div>
        </div>
        </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-3">
            <button type="submit" class="btn btn-block btn-info">Cadastrar</button>
        </div>
        <div class="col-sm-3">
            <button type="reset" class="btn btn-block btn-danger">Cancelar</button>
        </div>
    </div>
</form>
