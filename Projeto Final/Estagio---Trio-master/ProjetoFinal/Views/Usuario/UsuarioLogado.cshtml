@model UsuarioModel
@{
    Layout = "../Shared/_LayoutLogada.cshtml";
}
  <h3> Atualizar dados!</h3>
<form asp-controller="Usuario" asp-action="" class="form-horizontal" style="margin-left:15%">
    <div class="form-group">
        <label class="control-label col-sm-2" for="nome">Cpf:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="Cpf" id="nome" placeholder="Informe seu cpf">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="nome">Peso:</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" asp-for="Peso" id="nome" placeholder="Informe seu peso">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="cpf">Altura:</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" asp-for="Altura" id="nome" placeholder="Informe sua Altura">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="cpf">Pressao:</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" asp-for="Pressao" id="nome" placeholder="Informe sua Pressao">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="cpf">Nivel glicemico:</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" asp-for="Nivel_glicemico" id="nome" placeholder="Informe sua nivel glicemico">
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-3">
            <button type="submit" class="btn btn-block btn-info"> Ok</button>
        </div>
    </div>


</form>
